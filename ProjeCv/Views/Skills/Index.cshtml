@model ProjeCv.Models.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>SKİLL</th>
            <th>DELETE</th>
            <th>UPDATE</th>
         </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.skills)
        {
            <tr>
                <th>@x.Id</th>
                <td>@x.Skill</td>
                <td><a href="/Skills/Delete/@x.Id" class="btn btn-danger" onclick="return confirm('Are u sure to delete this skill?')">Delete</a></td>
                <td><a href="/Skills/List/@x.Id" class="btn btn-success">Update</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Skills/Ekle" class="btn btn-dark">Add new skills</a> 

